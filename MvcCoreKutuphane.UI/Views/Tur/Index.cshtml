@using MvcCoreKutuphane.Entities.Entity
@model IEnumerable<Tur>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Tur Adı</th>
            <th>Tarih</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <td>@item.Ad</td>
                <td>@item.Tarih</td>
                <td>
                    <a href="/Tur/Update/@item.Id" class=" btn btn-success">Düzenle</a>
                    <a href="/Tur/Delete/@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="/Tur/Insert" class="btn btn-primary">Yeni Tür Ekle</a>
